  <style name="Theme.EMS.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Theme.EMS.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Theme.EMS.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
